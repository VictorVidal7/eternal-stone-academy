{
    "name": "eternal-stone-academy",
    "version": "1.0.0",
    "description": "A backend for Eternal Stone Academy",
    "main": "src/server.js",
    "scripts": {
        "start": "cross-env NODE_ENV=production node src/server.js",
        "dev": "cross-env NODE_ENV=development nodemon src/server.js",
        "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit --testTimeout=120000",
        "test:watch": "cross-env NODE_ENV=test jest --watch",
        "test:coverage:verbose": "cross-env NODE_ENV=test jest --coverage --verbose",
        "clear-jest-cache": "jest --clearCache",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^6.11.2",
        "express-validator": "^6.15.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^6.0.12",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.24.7",
        "@babel/preset-env": "^7.24.7",
        "@types/jest": "^29.5.12",
        "babel-jest": "^29.7.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^8.0.0",
        "nodemon": "^3.1.4",
        "supertest": "^7.0.0"
    },
    "engines": {
        "node": ">=14.0.0"
